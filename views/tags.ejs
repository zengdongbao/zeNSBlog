<!DOCTYPE html>
<html>
<head>
<title><%= title %> <%= SITE.NAME %></title>
    <% include inc_static %>
</head>
<body>
    <div class="container">
        <% include inc_header %>
        <div class="page-body">
            <div class="post">
                <div class="post-header">
                    <h1><%= title %></h1>
                </div>
                <div class="post-body">
                    <ul class="tags-list clearfix">
                    <% for(var tag in tags){ %>
                        <% var len = tags[tag].length , lv;
                           if(len<5){
                              lv = 1;
                           }else if(len<10){
                              lv = 2;
                           }else if(len<20){
                              lv = 3;
                           }else{
                              lv = 4;
                           }
                        %>
                        <li><a class="lv<%= lv %>" href="<%= SITE.TAG %>/<%= tag %>"><%= tag %>(<%= len %>)</a></li>
                    <% } %>
                    </ul>
                </div>
            </div>
        </div>

        <% include inc_footer %>
    </div>
</body>
</html>